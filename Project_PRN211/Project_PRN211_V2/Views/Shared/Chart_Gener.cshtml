<script>

	async function main() {
		const response = await fetch('@Url.Action("avg_point_gener", "admin")', {
			method: "get",
			headers: { "Content-Type": "application/json" },
		})
		await response.json()
			.then((data) => {

				var arr = []
				var render = []
				arr = JSON.parse(data)
				console.log(arr)
				for (let i = 0; i < arr.length; i++) {
					var Movies_GenreTitle = (JSON.stringify(arr[i].Movies_GenreTitle)).replaceAll('"','')
					var total_point = (JSON.stringify(arr[i].total_point))
					var total_rate = (JSON.stringify(arr[i].total_rate))
					var avg = total_point / total_rate
					console.log(Movies_GenreTitle)
					var item = [Movies_GenreTitle, avg]
					render.push(item)

				}
				console.log(render)
				return render;
			})
			.then((render) => {
				Highcharts.chart('container', {
					chart: {
						type: 'column'
					},
					title: {
						text: 'Gener with hight rate'
					},
					subtitle: {
						text: 'This Chart is list gener with avagreate rate poin'
					},
					xAxis: {
						type: 'Gener',
						labels: {
							rotation: -45,
							style: {
								fontSize: '13px',
								fontFamily: 'Verdana, sans-serif'
							}
						}
					},
					yAxis: {
						min: 0,
						title: {
							text: 'Point'
						}
					},
					legend: {
						enabled: false
					},
					tooltip: {
						pointFormat: 'Gener Point: <b>{point.y:.1f} point</b>'
					},
					series: [{
						name: 'Point by Gener',
						data: render,
						dataLabels: {
							enabled: true,
							rotation: -90,
							color: '#FFFFFF',
							align: 'right',
							format: '{point.y:.1f}', // one decimal
							y: 10, // 10 pixels down from the top
							style: {
								fontSize: '13px',
								fontFamily: 'Verdana, sans-serif'
							}
						}
					}]
				});
			})
	}
