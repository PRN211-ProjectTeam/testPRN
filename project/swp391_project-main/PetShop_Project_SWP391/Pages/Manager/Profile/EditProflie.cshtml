@page
@model PetShop_Project_SWP391.Pages.Manager.Profile.EditProflieModel
@section EditProflie{

    
<div class="container">
        <nav class="my-4" aria-label="breadcrumb">
            <ol style="background: none!important;" class="breadcrumb d-flex align-items-center w-100">
                <li class="breadcrumb-item ">
                    <a href="~/Manager/Index" class="text-primary">
                        <h3>Home</h3>
                    </a>
                </li>
                <li class="breadcrumb-item  active d-flex align-items-center ">
                    <a href="~/Manager/Profile/Index" class="text-primary">
                        <h3>Thông tin</h3>
                    </a>
                </li>

            </ol>
        </nav>
        <h3 class="my-3">Cập nhật thông tin</h3>
        <div class="mt-3" @ViewData["message"]>
            <form asp-action="" method="post">
                <div class="card p-3 text-center">
                    
                    <div class="row">
                        <div class="col-md-6 my-2">
                            <div class="inputs form-group">
                                <input asp-for="employee.EmployeeId" type="hidden" />
                                <input asp-for="Account.EmployeeId" type="hidden" />
                                <input asp-for="Account.AccountId" type="hidden" />
                                <label class="form-label-required">Họ</label> <input type="text" required class="form-control" asp-for="employee.LastName">
                            </div>
                        </div>
                        <div class="col-md-6 my-2">
                            <div class="inputs form-group">
                                <label class="form-label-required">Tên</label>
                                <input type="text" required class="form-control" asp-for="employee.FirstName"> 
                            </div>
                        </div>
                        <div class="col-md-6 my-2">
                            <div class="inputs form-group"> <label class="form-label">Địa Chỉ</label> <input type="text" required class="form-control" asp-for="employee.Address"> </div>
                        </div>
                        <div class="col-md-6 my-2">
                            <div class="inputs form-group">
                                <label class="form-label-required">Số Điện Thoại </label>
                                <input class="form-control" required type="text" asp-for="employee.Phone" oninput="checkPhoneNumberFormat">
                                <br />
                                <span id="phoneErrorSpan" style="color: red; text-align:center"></span>
                                <div class="msg-error" style="text-align:center;color:red; margin-top: 5px">
                                    @ViewData["msgPhone"]
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 my-2">
                            <div class="inputs form-group">
                                <label class="form-label-required">Ngày Sinh</label>
                                <input type="text" required class="form-control" asp-for="employee.BirthDate" value="@Model.employee.BirthDate?.ToShortDateString()">

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                        </div>
                    </div>
                    <div class="mt-3 gap-2 d-flex justify-content-end">
                        
                        <button class="px-3 btn btn-sm btn-primary mr-3" type="submit">Cập nhật</button>
                        <a href="~/Manager/Profile/Index" class="px-3 btn btn-secondary "> Quay lại </a>
                        <div class="msg-error" style="text-align:center;color:red">
                            @ViewData["msgEmpty"]
                        </div>
                    </div>
                </div>
            </form>
        </div>
</div>
<style>
    body{
        background-color:#ffff
    }
    .card{
        border:none
    }
    .row{
        margin-top:30px;
    }
