@page
@model PetShop_Project_SWP391.Pages.Manager.ChagePassword.IndexModel
@{
}
@{
    ViewData["Title"] = "Đổi mật khẩu";
}
<div class="container">
    <nav class="my-4" aria-label="breadcrumb">
        <ol style="background: none!important;" class="breadcrumb d-flex align-items-center w-100">
            <li class="breadcrumb-item ">
                <a href="~/Manager/Index" class="text-primary">
                    <h3>Home</h3>
                </a>
            </li>
            <li class="breadcrumb-item active d-flex align-items-center ">
                <a href="~/Manager/Profile/Index">
                    <h3>Thông tin</h3>
                </a>
            </li>

        </ol>
    </nav>
    
    <form method="post" class="container1">
        <h3 class="my-3 text-center">@ViewData["Title"]</h3>
        <input asp-for="Account.AccountId" type="hidden" />
        <div class="a1">
            <label for="currentPassword">Mật khẩu cũ:</label>
            <input type="password" id="currentPassword" asp-for="CurrentPassword" />
            <span asp-validation-for="CurrentPassword" class="text-danger" style="color: red;"></span>
            <span style="color: red;">@ViewData["PasswordError"]</span>
        </div>
        <div class="a1">
            <label for="newPassword">Mật khẩu mới:</label>
            <input type="password" id="newPassword" asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" class="text-danger" style="color: red;"></span>
        </div>
        <div class="a1">
            <label for="confirmPassword">Xác nhận lại mật khẩu:</label>
            <input type="password" id="confirmPassword" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger" style="color: red;"></span>
        </div>
        <div class="a2" id="form-title">
            <input type="submit" value="Đổi mật khẩu" />
            <span style="color: forestgreen;">@ViewData["Success"]</span>
        </div>
    </form>
</div>

<link href="~/css/changepassword.css" rel="stylesheet" />